@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table table-bordered table-striped">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Count</th>
    </tr>
    @* here we use a for loop to display the product table data *@
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        //here we pass the iteration first then the column index for productName[1], price[2], count[3]
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
        </tr>
    }
</table>

