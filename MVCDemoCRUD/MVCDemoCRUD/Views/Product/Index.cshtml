@model System.Data.DataTable
@{
    ViewBag.Title = "Product List";
}

<h2>Product List</h2>
<table class="table table-bordered table-striped">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Count</th>
        <th>Edit Product</th>
    </tr>
    @* here we use a for loop to display the product table data *@
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        //here we pass the iteration first then the column index for productName[1], price[2], count[3] and the ProductID[0] to edit
        <tr>
            <td style="padding: 15px;">@Model.Rows[i][1]</td>
            <td style="padding: 15px;">@Model.Rows[i][2]</td>
            <td style="padding: 15px;">@Model.Rows[i][3]</td>
            <td>
                <a href="@Url.Action("Edit","Product", new {@id=Model.Rows[i][0]})" class="btn btn-success">Edit</a>
            </td>
        </tr>
    }
</table>

@* here we create a link to add new products inside the index view (the action is first param, second param is the controller) *@
<a href="@Url.Action("Create","Product")" class="btn btn-success">Add Product</a>

